<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/items_stroke"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/item_imge"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:background="@drawable/botato" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Iteam Name"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/layer2"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desicription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="small dish , new potato , original oil , from jordan "
                android:textAlignment="center"
                android:textColor="@color/gray_light"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/back_2_layout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_2_layout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/alpha_frame"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/white_dark"
                    android:textSize="30sp"

                    />

                <TextView
                    android:id="@+id/Qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/alpha_frame"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/floor"

                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/alpha_frame"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/white_dark"
                    android:textSize="30sp"

                    />

                <TextView
                    android:id="@+id/TotalPricre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/alpha_frame"
                    android:gravity="center"
                    android:text="0 JD"
                    android:textAllCaps="false"

                    android:textColor="@color/white_dark"
                    android:textSize="30sp" />
            </LinearLayout>

            <Button
                android:id="@+id/addToOrder"
                android:layout_width="217dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_background"
                android:text="add TO Order"
                android:textAlignment="center"
                android:textColor="@color/layer4"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>